# Cloudflare Pages headers

/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-XSS-Protection: 1; mode=block
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; font-src 'self'; connect-src 'self' https://www.google-analytics.com https://api.qrserver.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'

# Static assets - long cache
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Icons and images - long cache
/icons/*
  Cache-Control: public, max-age=31536000, immutable

/og/*
  Cache-Control: public, max-age=86400

# Service worker - no cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - short cache for PWA updates
/manifest.json
  Cache-Control: public, max-age=86400
