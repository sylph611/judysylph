---
interface Props {
  url: string;
  title: string;
  description: string;
  lang: string;
}

const { url, title, description, lang } = Astro.props;
const t = {
  share: lang === 'ko' ? '결과 공유하기' : 'Share Your Result',
  kakao: lang === 'ko' ? '카카오톡' : 'KakaoTalk',
  twitter: lang === 'ko' ? '트위터' : 'Twitter',
  facebook: lang === 'ko' ? '페이스북' : 'Facebook',
  whatsapp: 'WhatsApp',
  line: 'LINE',
  copy: lang === 'ko' ? '링크 복사' : 'Copy Link',
  copied: lang === 'ko' ? '복사됨!' : 'Copied!'
};
---

<div class="share-buttons mt-8">
  <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 text-center">
    {t.share}
  </h3>
  <div class="flex justify-center gap-3 flex-wrap">
    <!-- Kakao -->
    <button
      type="button"
      class="share-btn kakao flex items-center gap-2 px-4 py-2 bg-[#FEE500] text-[#3C1E1E] rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      data-title={title}
      data-description={description}
      aria-label={lang === 'ko' ? '카카오톡으로 공유하기' : 'Share on KakaoTalk'}
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 3C6.477 3 2 6.463 2 10.691c0 2.746 1.824 5.157 4.558 6.517-.14.525-.904 3.375-.935 3.588 0 0-.019.151.081.21.099.059.217.013.217.013.286-.04 3.307-2.166 3.835-2.538.738.106 1.501.162 2.244.162 5.523 0 10-3.463 10-7.691S17.523 3 12 3z"/>
      </svg>
      {t.kakao}
    </button>

    <!-- Twitter -->
    <button
      type="button"
      class="share-btn twitter flex items-center gap-2 px-4 py-2 bg-black text-white rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      data-title={title}
      aria-label={lang === 'ko' ? '트위터로 공유하기' : 'Share on Twitter'}
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      {t.twitter}
    </button>

    <!-- Facebook -->
    <button
      type="button"
      class="share-btn facebook flex items-center gap-2 px-4 py-2 bg-[#1877F2] text-white rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      aria-label={lang === 'ko' ? '페이스북으로 공유하기' : 'Share on Facebook'}
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
      {t.facebook}
    </button>

    <!-- WhatsApp -->
    <button
      type="button"
      class="share-btn whatsapp flex items-center gap-2 px-4 py-2 bg-[#25D366] text-white rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      data-title={title}
      aria-label="Share on WhatsApp"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      {t.whatsapp}
    </button>

    <!-- LINE -->
    <button
      type="button"
      class="share-btn line flex items-center gap-2 px-4 py-2 bg-[#00B900] text-white rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      data-title={title}
      aria-label="Share on LINE"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M19.365 9.863c.349 0 .63.285.63.631 0 .345-.281.63-.63.63H17.61v1.125h1.755c.349 0 .63.283.63.63 0 .344-.281.629-.63.629h-2.386c-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.627-.63h2.386c.349 0 .63.285.63.63 0 .349-.281.63-.63.63H17.61v1.125h1.755zm-3.855 3.016c0 .27-.174.51-.432.596-.064.021-.133.031-.199.031-.211 0-.391-.09-.51-.25l-2.443-3.317v2.94c0 .344-.279.629-.631.629-.346 0-.626-.285-.626-.629V8.108c0-.27.173-.51.43-.595.06-.023.136-.033.194-.033.195 0 .375.104.495.254l2.462 3.33V8.108c0-.345.282-.63.63-.63.345 0 .63.285.63.63v4.771zm-5.741 0c0 .344-.282.629-.631.629-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.627-.63.349 0 .631.285.631.63v4.771zm-2.466.629H4.917c-.345 0-.63-.285-.63-.629V8.108c0-.345.285-.63.63-.63.348 0 .63.285.63.63v4.141h1.756c.348 0 .629.283.629.63 0 .344-.281.629-.629.629M24 10.314C24 4.943 18.615.572 12 .572S0 4.943 0 10.314c0 4.811 4.27 8.842 10.035 9.608.391.082.923.258 1.058.59.12.301.079.766.038 1.08l-.164 1.02c-.045.301-.24 1.186 1.049.645 1.291-.539 6.916-4.078 9.436-6.975C23.176 14.393 24 12.458 24 10.314"/>
      </svg>
      {t.line}
    </button>

    <!-- Copy Link -->
    <button
      type="button"
      class="share-btn copy flex items-center gap-2 px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      data-copied-text={t.copied}
      aria-label={lang === 'ko' ? '링크 복사하기' : 'Copy link to clipboard'}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
      </svg>
      <span class="copy-text">{t.copy}</span>
    </button>
  </div>
</div>

<script>
  // GA share tracking helper
  const trackShare = (platform: string) => {
    if (typeof gtag !== 'undefined') {
      gtag('event', 'share', {
        event_category: 'engagement',
        event_label: platform,
        content_type: 'result',
        item_id: window.location.pathname
      });
    }
  };

  // Kakao share - uses Web Share API on mobile, copy link on desktop
  document.querySelectorAll('.share-btn.kakao').forEach(btn => {
    btn.addEventListener('click', async () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      const title = btn.getAttribute('data-title') || document.title;
      const description = btn.getAttribute('data-description') || '';

      trackShare('kakao');

      // Check if mobile and Web Share API is available
      const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);

      if (isMobile && navigator.share) {
        try {
          await navigator.share({
            title: title,
            text: description,
            url: url
          });
        } catch (err) {
          // User cancelled or error - do nothing
        }
      } else {
        // Desktop: copy link and show instructions
        try {
          await navigator.clipboard.writeText(url);
          alert('링크가 복사되었습니다!\n카카오톡에서 붙여넣기하여 공유하세요.');
        } catch (err) {
          // Fallback: open in new window with instructions
          prompt('아래 링크를 복사하여 카카오톡에서 공유하세요:', url);
        }
      }
    });
  });

  // Twitter share
  document.querySelectorAll('.share-btn.twitter').forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      const title = btn.getAttribute('data-title') || document.title;
      trackShare('twitter');
      window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url)}`, '_blank');
    });
  });

  // Facebook share
  document.querySelectorAll('.share-btn.facebook').forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      trackShare('facebook');
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`, '_blank');
    });
  });

  // WhatsApp share
  document.querySelectorAll('.share-btn.whatsapp').forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      const title = btn.getAttribute('data-title') || document.title;
      trackShare('whatsapp');
      window.open(`https://api.whatsapp.com/send?text=${encodeURIComponent(title + ' ' + url)}`, '_blank');
    });
  });

  // LINE share
  document.querySelectorAll('.share-btn.line').forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      const title = btn.getAttribute('data-title') || document.title;
      trackShare('line');
      window.open(`https://social-plugins.line.me/lineit/share?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`, '_blank');
    });
  });

  // Copy link
  document.querySelectorAll('.share-btn.copy').forEach(btn => {
    btn.addEventListener('click', async () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      const copiedText = btn.getAttribute('data-copied-text') || 'Copied!';
      const textSpan = btn.querySelector('.copy-text');
      const originalText = textSpan?.textContent || '';

      try {
        await navigator.clipboard.writeText(url);
        trackShare('copy_link');
        if (textSpan) {
          textSpan.textContent = copiedText;
          setTimeout(() => {
            textSpan.textContent = originalText;
          }, 2000);
        }
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>
