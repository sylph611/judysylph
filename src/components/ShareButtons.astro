---
interface Props {
  url: string;
  title: string;
  description: string;
  lang: string;
}

const { url, title, description, lang } = Astro.props;
const t = {
  share: lang === 'ko' ? '결과 공유하기' : 'Share Your Result',
  kakao: lang === 'ko' ? '카카오톡' : 'KakaoTalk',
  twitter: lang === 'ko' ? '트위터' : 'Twitter',
  facebook: lang === 'ko' ? '페이스북' : 'Facebook',
  copy: lang === 'ko' ? '링크 복사' : 'Copy Link',
  copied: lang === 'ko' ? '복사됨!' : 'Copied!'
};
---

<div class="share-buttons mt-8">
  <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 text-center">
    {t.share}
  </h3>
  <div class="flex justify-center gap-3 flex-wrap">
    <!-- Kakao -->
    <button
      type="button"
      class="share-btn kakao flex items-center gap-2 px-4 py-2 bg-[#FEE500] text-[#3C1E1E] rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      data-title={title}
      data-description={description}
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 3C6.477 3 2 6.463 2 10.691c0 2.746 1.824 5.157 4.558 6.517-.14.525-.904 3.375-.935 3.588 0 0-.019.151.081.21.099.059.217.013.217.013.286-.04 3.307-2.166 3.835-2.538.738.106 1.501.162 2.244.162 5.523 0 10-3.463 10-7.691S17.523 3 12 3z"/>
      </svg>
      {t.kakao}
    </button>

    <!-- Twitter -->
    <button
      type="button"
      class="share-btn twitter flex items-center gap-2 px-4 py-2 bg-black text-white rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      data-title={title}
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      {t.twitter}
    </button>

    <!-- Facebook -->
    <button
      type="button"
      class="share-btn facebook flex items-center gap-2 px-4 py-2 bg-[#1877F2] text-white rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
      {t.facebook}
    </button>

    <!-- Copy Link -->
    <button
      type="button"
      class="share-btn copy flex items-center gap-2 px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg font-medium hover:opacity-90 transition-opacity"
      data-url={url}
      data-copied-text={t.copied}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
      </svg>
      <span class="copy-text">{t.copy}</span>
    </button>
  </div>
</div>

<script>
  // Kakao SDK initialization
  declare const Kakao: any;

  document.addEventListener('DOMContentLoaded', () => {
    // Initialize Kakao SDK
    if (typeof Kakao !== 'undefined' && !Kakao.isInitialized()) {
      Kakao.init('YOUR_KAKAO_APP_KEY'); // Replace with actual key
    }
  });

  // GA share tracking helper
  const trackShare = (platform: string) => {
    if (typeof gtag !== 'undefined') {
      gtag('event', 'share', {
        event_category: 'engagement',
        event_label: platform,
        content_type: 'result',
        item_id: window.location.pathname
      });
    }
  };

  // Kakao share
  document.querySelectorAll('.share-btn.kakao').forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      const title = btn.getAttribute('data-title') || document.title;
      const description = btn.getAttribute('data-description') || '';

      trackShare('kakao');

      if (typeof Kakao !== 'undefined' && Kakao.isInitialized()) {
        Kakao.Share.sendDefault({
          objectType: 'feed',
          content: {
            title: title,
            description: description,
            imageUrl: `${window.location.origin}/og/default.png`,
            link: {
              mobileWebUrl: url,
              webUrl: url,
            },
          },
          buttons: [
            {
              title: '결과 보기',
              link: {
                mobileWebUrl: url,
                webUrl: url,
              },
            },
          ],
        });
      } else {
        window.open(`https://story.kakao.com/share?url=${encodeURIComponent(url)}`, '_blank');
      }
    });
  });

  // Twitter share
  document.querySelectorAll('.share-btn.twitter').forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      const title = btn.getAttribute('data-title') || document.title;
      trackShare('twitter');
      window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url)}`, '_blank');
    });
  });

  // Facebook share
  document.querySelectorAll('.share-btn.facebook').forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      trackShare('facebook');
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`, '_blank');
    });
  });

  // Copy link
  document.querySelectorAll('.share-btn.copy').forEach(btn => {
    btn.addEventListener('click', async () => {
      const url = btn.getAttribute('data-url') || window.location.href;
      const copiedText = btn.getAttribute('data-copied-text') || 'Copied!';
      const textSpan = btn.querySelector('.copy-text');
      const originalText = textSpan?.textContent || '';

      try {
        await navigator.clipboard.writeText(url);
        trackShare('copy_link');
        if (textSpan) {
          textSpan.textContent = copiedText;
          setTimeout(() => {
            textSpan.textContent = originalText;
          }, 2000);
        }
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>
