---
interface Props {
  slot: 'header' | 'inline' | 'sidebar' | 'result';
  className?: string;
}

const { slot, className = '' } = Astro.props;

const slotConfig = {
  header: {
    width: '728px',
    height: '90px',
    label: '728x90'
  },
  inline: {
    width: '100%',
    height: '250px',
    label: '300x250'
  },
  sidebar: {
    width: '300px',
    height: '600px',
    label: '300x600'
  },
  result: {
    width: '100%',
    height: '280px',
    label: '336x280'
  }
};

const config = slotConfig[slot];
---

<div class={`ad-container ad-${slot} ${className}`}>
  <div
    class="ad-placeholder flex items-center justify-center bg-gray-100 dark:bg-gray-800 rounded-lg text-gray-400 dark:text-gray-500 text-sm"
    style={`width: ${config.width}; height: ${config.height}; max-width: 100%;`}
  >
    <!-- Google AdSense placeholder -->
    <div class="text-center">
      <span class="block">Ad Space</span>
      <span class="block text-xs">({config.label})</span>
    </div>

    <!--
    Uncomment and replace with your AdSense code:
    <ins class="adsbygoogle"
      style={`display:block;width:${config.width};height:${config.height};max-width:100%;`}
      data-ad-client="ca-pub-XXXXXXXXXXXXXXXX"
      data-ad-slot="XXXXXXXXXX"
      data-ad-format="auto"
      data-full-width-responsive="true"></ins>
    <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
    -->
  </div>
</div>

<style>
  .ad-container {
    display: flex;
    justify-content: center;
    padding: 1rem 0;
  }

  .ad-header {
    display: none;
  }

  @media (min-width: 768px) {
    .ad-header {
      display: flex;
    }
  }

  .ad-inline {
    margin: 1.5rem 0;
  }

  .ad-sidebar {
    display: none;
    position: sticky;
    top: 100px;
  }

  @media (min-width: 1024px) {
    .ad-sidebar {
      display: flex;
    }
  }

  .ad-result {
    margin: 2rem auto;
    max-width: 336px;
  }
</style>
