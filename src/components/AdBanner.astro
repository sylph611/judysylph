---
interface Props {
  slot?: string;
  format?: 'auto' | 'horizontal' | 'vertical' | 'rectangle';
  className?: string;
}

const { slot, format = 'auto', className = '' } = Astro.props;
---

<div class={`ad-container my-6 flex justify-center ${className}`}>
  <ins
    class="adsbygoogle"
    style="display:block"
    data-ad-client="ca-pub-4221589332879382"
    data-ad-slot={slot}
    data-ad-format={format}
    data-full-width-responsive="true"
  ></ins>
</div>

<script is:inline>
  (function() {
    try {
      (adsbygoogle = window.adsbygoogle || []).push({});
    } catch (e) {}
  })();
</script>

<style>
  .ad-container {
    min-height: 100px;
    background: transparent;
  }

  /* Hide empty ad containers */
  .ad-container:empty {
    display: none;
  }
</style>
