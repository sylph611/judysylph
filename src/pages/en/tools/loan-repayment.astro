---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import ToolSeoContent from '../../../components/ToolSeoContent.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps } from '../../../utils/tools';

const lang = 'en';
const tool = getTool('loan-repayment', lang);

const siteUrl = 'https://judysylph.com';
const steps = calculatorSteps['en']['financial'];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, 'en', siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, 'en', siteUrl, steps) : null;

const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="loan-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="principal" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Loan Amount ($)</label>
            <input type="number" id="principal" placeholder="250000" min="0"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="interest-rate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Annual Interest Rate (%)</label>
            <input type="number" id="interest-rate" placeholder="6.5" min="0" max="30" step="0.1"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="term-years" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Loan Term (Years)</label>
            <input type="number" id="term-years" placeholder="30" min="1" max="50"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="repayment-type" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Repayment Type</label>
            <select id="repayment-type" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500">
              <option value="equal-payment" selected>Fixed Payment (Amortizing)</option>
              <option value="equal-principal">Fixed Principal</option>
            </select>
          </div>
        </div>

        <div class="flex gap-3">
          <button type="submit" class="flex-1 px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors">Calculate</button>
          <button type="reset" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-xl hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">Reset</button>
        </div>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
          <div class="bg-primary-50 dark:bg-primary-900/30 rounded-xl p-4 text-center">
            <div class="text-sm text-primary-600 dark:text-primary-400 mb-1">Monthly Payment</div>
            <div id="result-monthly" class="text-2xl font-bold text-primary-600 dark:text-primary-400">$0</div>
            <div id="result-monthly-range" class="text-xs text-gray-500 hidden">First ~ Last</div>
          </div>
          <div class="bg-red-50 dark:bg-red-900/30 rounded-xl p-4 text-center">
            <div class="text-sm text-red-600 dark:text-red-400 mb-1">Total Interest</div>
            <div id="result-total-interest" class="text-2xl font-bold text-red-600 dark:text-red-400">$0</div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">Total Payment</div>
            <div id="result-total-payment" class="text-2xl font-bold text-gray-900 dark:text-white">$0</div>
          </div>
        </div>

        <div class="bg-blue-50 dark:bg-blue-900/30 rounded-xl p-4 mb-4">
          <div class="flex justify-between items-center mb-2">
            <span class="text-sm text-blue-800 dark:text-blue-200">Principal</span>
            <span id="principal-display" class="font-medium text-blue-600 dark:text-blue-400">$0</span>
          </div>
          <div class="w-full bg-blue-200 dark:bg-blue-800 rounded-full h-4">
            <div id="principal-bar" class="bg-blue-600 h-4 rounded-full" style="width: 0%"></div>
          </div>
          <div class="flex justify-between items-center mt-2">
            <span class="text-sm text-red-800 dark:text-red-200">Interest</span>
            <span id="interest-percent" class="text-xs text-gray-500">0% of total</span>
          </div>
        </div>

        <div class="bg-green-50 dark:bg-green-900/30 rounded-xl p-4">
          <h4 class="font-bold text-green-800 dark:text-green-200 mb-2">Repayment Tips</h4>
          <ul class="text-sm text-green-700 dark:text-green-300 space-y-1">
            <li>• Extra payments toward principal can save significant interest</li>
            <li>• Fixed principal payments have higher initial amounts but less total interest</li>
            <li>• Consider refinancing if rates drop significantly</li>
          </ul>
        </div>
      </div>
    </div>

    <AdBanner className="mt-8" />

    <!-- SEO Content -->
    <ToolSeoContent
      title={tool?.title || ''}
      description={tool?.description || ''}
      emoji={tool?.emoji || ''}
      category={tool?.category || ''}
      lang={lang}
      slug={tool?.slug || ''}
    />

    <div class="mt-8 text-center">
      <a href="/en/tools" class="text-primary-600 dark:text-primary-400 hover:underline">← Back to Tools</a>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('loan-form') as HTMLFormElement;

  function formatCurrency(num: number): string {
    return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 }).format(num);
  }

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const principal = parseFloat((document.getElementById('principal') as HTMLInputElement).value);
    const annualRate = parseFloat((document.getElementById('interest-rate') as HTMLInputElement).value) / 100;
    const termYears = parseFloat((document.getElementById('term-years') as HTMLInputElement).value);
    const repaymentType = (document.getElementById('repayment-type') as HTMLSelectElement).value;

    if (!principal || !annualRate || !termYears) {
      alert('Please fill in all fields');
      return;
    }

    const monthlyRate = annualRate / 12;
    const totalMonths = termYears * 12;
    let monthlyPayment: number;
    let totalInterest: number;
    let totalPayment: number;

    if (repaymentType === 'equal-payment') {
      // Standard amortization
      monthlyPayment = principal * (monthlyRate * Math.pow(1 + monthlyRate, totalMonths)) /
                       (Math.pow(1 + monthlyRate, totalMonths) - 1);
      totalPayment = monthlyPayment * totalMonths;
      totalInterest = totalPayment - principal;

      (document.getElementById('result-monthly') as HTMLElement).textContent = formatCurrency(monthlyPayment);
      (document.getElementById('result-monthly-range') as HTMLElement).classList.add('hidden');
    } else {
      // Fixed principal
      const monthlyPrincipal = principal / totalMonths;
      const firstMonthInterest = principal * monthlyRate;
      const lastMonthInterest = monthlyPrincipal * monthlyRate;
      const firstPayment = monthlyPrincipal + firstMonthInterest;
      const lastPayment = monthlyPrincipal + lastMonthInterest;

      totalInterest = 0;
      for (let i = 0; i < totalMonths; i++) {
        const remainingPrincipal = principal - (monthlyPrincipal * i);
        totalInterest += remainingPrincipal * monthlyRate;
      }
      totalPayment = principal + totalInterest;
      monthlyPayment = (firstPayment + lastPayment) / 2;

      (document.getElementById('result-monthly') as HTMLElement).textContent =
        formatCurrency(firstPayment) + ' → ' + formatCurrency(lastPayment);
      (document.getElementById('result-monthly-range') as HTMLElement).classList.remove('hidden');
      (document.getElementById('result-monthly-range') as HTMLElement).textContent = 'First → Last month';
    }

    const resultArea = document.getElementById('result-area');
    resultArea?.classList.remove('hidden');

    (document.getElementById('result-total-interest') as HTMLElement).textContent = formatCurrency(totalInterest);
    (document.getElementById('result-total-payment') as HTMLElement).textContent = formatCurrency(totalPayment);
    (document.getElementById('principal-display') as HTMLElement).textContent = formatCurrency(principal);

    const principalPercent = (principal / totalPayment) * 100;
    (document.getElementById('principal-bar') as HTMLElement).style.width = principalPercent + '%';
    (document.getElementById('interest-percent') as HTMLElement).textContent =
      `${(100 - principalPercent).toFixed(1)}% of total`;
  });

  form?.addEventListener('reset', () => {
    document.getElementById('result-area')?.classList.add('hidden');
  });
</script>
