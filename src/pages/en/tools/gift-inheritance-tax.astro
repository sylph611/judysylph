---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import ToolSeoContent from '../../../components/ToolSeoContent.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps, getToolStepType } from '../../../utils/tools';

const lang = 'en';
const tool = getTool('gift-inheritance-tax', lang);
const siteUrl = 'https://judysylph.com';
const stepType = getToolStepType('gift-inheritance-tax');
const steps = calculatorSteps[lang][stepType];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, lang, siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, lang, siteUrl, steps) : null;
const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
      <p class="text-sm text-primary-600 dark:text-primary-400 mt-2">Based on 2026 Korean Tax Law</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <div class="flex mb-6 bg-gray-100 dark:bg-gray-700 rounded-xl p-1">
        <button id="tab-gift" class="flex-1 py-2 px-4 rounded-lg font-medium bg-white dark:bg-gray-600 text-gray-900 dark:text-white shadow">Gift Tax</button>
        <button id="tab-inherit" class="flex-1 py-2 px-4 rounded-lg font-medium text-gray-600 dark:text-gray-400">Inheritance Tax</button>
      </div>

      <form id="calc-form" class="space-y-6">
        <input type="hidden" id="taxType" value="gift" />
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Relationship to Donor/Deceased</label>
          <select id="relationship" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
            <option value="spouse">Spouse</option>
            <option value="child">Adult Child</option>
            <option value="minor">Minor Child</option>
            <option value="other">Other Relatives</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"><span id="amount-label">Gift</span> Amount (KRW)</label>
          <input type="text" id="amount" placeholder="500,000,000" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
        </div>
        <button type="submit" class="w-full px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700">Calculate</button>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-primary-900/20 dark:to-secondary-900/20 rounded-xl p-6">
          <div class="space-y-3 mb-4">
            <div class="flex justify-between bg-white dark:bg-gray-800 rounded-lg p-3"><span class="text-gray-600 dark:text-gray-400">Asset Value</span><span id="r-amount" class="font-medium">-</span></div>
            <div class="flex justify-between bg-white dark:bg-gray-800 rounded-lg p-3"><span class="text-gray-600 dark:text-gray-400">Deduction</span><span id="r-deduction" class="font-medium text-green-600">-</span></div>
            <div class="flex justify-between bg-white dark:bg-gray-800 rounded-lg p-3"><span class="text-gray-600 dark:text-gray-400">Taxable Base</span><span id="r-base" class="font-medium">-</span></div>
          </div>
          <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400">Estimated Tax</div>
            <div id="r-tax" class="text-3xl font-bold text-primary-600 dark:text-primary-400">-</div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 rounded-xl p-4">
      <h4 class="font-bold text-blue-800 dark:text-blue-200 mb-2">2026 Deduction Limits</h4>
      <p class="text-sm text-blue-700 dark:text-blue-300">Gift: Spouse 600M, Adult Child 50M, Minor 20M KRW / Inheritance: Lump sum 500M KRW</p>
    </div>
    <AdBanner className="mt-8" />

    <!-- SEO Content -->
    <ToolSeoContent
      title={tool?.title || ''}
      description={tool?.description || ''}
      emoji={tool?.emoji || ''}
      category={tool?.category || ''}
      lang={lang}
      slug={tool?.slug || ''}
    />

    <div class="mt-8 text-center"><a href="/en/tools" class="text-primary-600 dark:text-primary-400 hover:underline">&larr; Back to Tools</a></div>
  </div>
</Layout>

<script>
  const form = document.getElementById('calc-form') as HTMLFormElement;
  const amountInput = document.getElementById('amount') as HTMLInputElement;
  const taxTypeInput = document.getElementById('taxType') as HTMLInputElement;

  document.getElementById('tab-gift')?.addEventListener('click', function() {
    taxTypeInput.value = 'gift';
    this.classList.add('bg-white','dark:bg-gray-600','shadow');
    document.getElementById('tab-inherit')?.classList.remove('bg-white','dark:bg-gray-600','shadow');
    document.getElementById('amount-label')!.textContent = 'Gift';
  });

  document.getElementById('tab-inherit')?.addEventListener('click', function() {
    taxTypeInput.value = 'inherit';
    this.classList.add('bg-white','dark:bg-gray-600','shadow');
    document.getElementById('tab-gift')?.classList.remove('bg-white','dark:bg-gray-600','shadow');
    document.getElementById('amount-label')!.textContent = 'Inheritance';
  });

  amountInput?.addEventListener('input', e => {
    const v = (e.target as HTMLInputElement).value.replace(/\D/g,'');
    (e.target as HTMLInputElement).value = Number(v).toLocaleString('ko-KR');
  });

  const deductions: Record<string,number> = { spouse: 600000000, child: 50000000, minor: 20000000, other: 10000000 };
  const brackets = [
    {l:100000000,r:0.10,d:0},{l:500000000,r:0.20,d:10000000},{l:1000000000,r:0.30,d:60000000},
    {l:3000000000,r:0.40,d:160000000},{l:Infinity,r:0.50,d:460000000}
  ];

  form?.addEventListener('submit', e => {
    e.preventDefault();
    const rel = (document.getElementById('relationship') as HTMLSelectElement).value;
    const amt = parseInt(amountInput.value.replace(/,/g,''));
    const ded = taxTypeInput.value === 'gift' ? deductions[rel] : 500000000;
    const base = Math.max(0, amt - ded);
    let tax = 0;
    for (const b of brackets) { if (base <= b.l) { tax = Math.round(base * b.r - b.d); break; } }

    document.getElementById('result-area')?.classList.remove('hidden');
    document.getElementById('r-amount')!.textContent = amt.toLocaleString('ko-KR') + ' KRW';
    document.getElementById('r-deduction')!.textContent = '-' + ded.toLocaleString('ko-KR') + ' KRW';
    document.getElementById('r-base')!.textContent = base.toLocaleString('ko-KR') + ' KRW';
    document.getElementById('r-tax')!.textContent = tax.toLocaleString('ko-KR') + ' KRW';
  });
</script>
