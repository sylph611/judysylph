---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps } from '../../../utils/tools';

const lang = 'en';
const tool = getTool('water-intake', lang);

const siteUrl = 'https://judysylph.com';
const steps = calculatorSteps['en']['health'];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "HealthApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, 'en', siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, 'en', siteUrl, steps) : null;

const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="water-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="weight" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Weight (lbs)</label>
            <input type="number" id="weight" placeholder="150" min="50" max="500"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="activity" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Activity Level</label>
            <select id="activity" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500">
              <option value="sedentary">Sedentary (office job)</option>
              <option value="light">Light exercise (1-2x/week)</option>
              <option value="moderate" selected>Moderate exercise (3-5x/week)</option>
              <option value="active">Active (6-7x/week)</option>
              <option value="athlete">Very active (athlete level)</option>
            </select>
          </div>
          <div>
            <label for="climate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Climate/Environment</label>
            <select id="climate" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500">
              <option value="cool">Cool climate</option>
              <option value="normal" selected>Moderate</option>
              <option value="hot">Hot climate</option>
              <option value="very-hot">Very hot climate</option>
            </select>
          </div>
          <div>
            <label for="caffeine" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Caffeine Intake</label>
            <select id="caffeine" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500">
              <option value="none">None</option>
              <option value="low">1-2 cups/day</option>
              <option value="medium" selected>3-4 cups/day</option>
              <option value="high">5+ cups/day</option>
            </select>
          </div>
        </div>

        <div class="flex gap-3">
          <button type="submit" class="flex-1 px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors">Calculate</button>
          <button type="reset" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-xl hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">Reset</button>
        </div>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="text-center mb-6">
          <div class="text-sm text-gray-600 dark:text-gray-400 mb-2">Daily Recommended Water Intake</div>
          <div class="flex items-center justify-center gap-2">
            <span id="result-oz" class="text-5xl font-bold text-blue-600 dark:text-blue-400">0</span>
            <span class="text-2xl text-gray-600 dark:text-gray-400">oz</span>
          </div>
          <div id="result-glasses" class="text-gray-600 dark:text-gray-400 mt-2">About 0 glasses (8 oz each)</div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <div class="bg-blue-50 dark:bg-blue-900/30 rounded-xl p-4 text-center">
            <div class="text-3xl mb-1">üåÖ</div>
            <div class="text-sm text-blue-800 dark:text-blue-200">Morning</div>
            <div id="result-morning" class="font-bold text-blue-600 dark:text-blue-400">10 oz</div>
          </div>
          <div class="bg-blue-50 dark:bg-blue-900/30 rounded-xl p-4 text-center">
            <div class="text-3xl mb-1">‚òÄÔ∏è</div>
            <div class="text-sm text-blue-800 dark:text-blue-200">AM</div>
            <div id="result-am" class="font-bold text-blue-600 dark:text-blue-400">17 oz</div>
          </div>
          <div class="bg-blue-50 dark:bg-blue-900/30 rounded-xl p-4 text-center">
            <div class="text-3xl mb-1">üå§Ô∏è</div>
            <div class="text-sm text-blue-800 dark:text-blue-200">PM</div>
            <div id="result-pm" class="font-bold text-blue-600 dark:text-blue-400">17 oz</div>
          </div>
          <div class="bg-blue-50 dark:bg-blue-900/30 rounded-xl p-4 text-center">
            <div class="text-3xl mb-1">üåô</div>
            <div class="text-sm text-blue-800 dark:text-blue-200">Evening</div>
            <div id="result-evening" class="font-bold text-blue-600 dark:text-blue-400">10 oz</div>
          </div>
        </div>

        <div class="bg-green-50 dark:bg-green-900/30 rounded-xl p-4">
          <h4 class="font-bold text-green-800 dark:text-green-200 mb-2">üí° Hydration Tips</h4>
          <ul class="text-sm text-green-700 dark:text-green-300 space-y-1">
            <li>‚Ä¢ Drink small amounts frequently before you feel thirsty</li>
            <li>‚Ä¢ A glass of water 30 minutes before meals aids digestion</li>
            <li>‚Ä¢ Increase intake before and after exercise</li>
            <li>‚Ä¢ Caffeinated drinks don't count toward your water goal</li>
          </ul>
        </div>
      </div>
    </div>

    <AdBanner className="mt-8" />

    <div class="mt-8 text-center">
      <a href="/en/tools" class="text-primary-600 dark:text-primary-400 hover:underline">‚Üê Back to Tools</a>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('water-form') as HTMLFormElement;

  const activityFactors: Record<string, number> = {
    'sedentary': 0.5,
    'light': 0.55,
    'moderate': 0.6,
    'active': 0.7,
    'athlete': 0.8
  };

  const climateFactors: Record<string, number> = {
    'cool': 0.9,
    'normal': 1.0,
    'hot': 1.15,
    'very-hot': 1.3
  };

  const caffeineFactors: Record<string, number> = {
    'none': 0,
    'low': 4,
    'medium': 8,
    'high': 12
  };

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const weightLbs = parseFloat((document.getElementById('weight') as HTMLInputElement).value);
    const activity = (document.getElementById('activity') as HTMLSelectElement).value;
    const climate = (document.getElementById('climate') as HTMLSelectElement).value;
    const caffeine = (document.getElementById('caffeine') as HTMLSelectElement).value;

    if (!weightLbs) {
      alert('Please enter your weight');
      return;
    }

    const baseOz = weightLbs * activityFactors[activity];
    const climateAdjusted = baseOz * climateFactors[climate];
    const caffeineAdjusted = climateAdjusted + caffeineFactors[caffeine];
    const totalOz = Math.round(caffeineAdjusted);
    const glasses = Math.round(totalOz / 8);

    const morning = Math.round(totalOz * 0.15);
    const am = Math.round(totalOz * 0.30);
    const pm = Math.round(totalOz * 0.35);
    const evening = Math.round(totalOz * 0.20);

    const resultArea = document.getElementById('result-area');
    resultArea?.classList.remove('hidden');

    (document.getElementById('result-oz') as HTMLElement).textContent = totalOz.toString();
    (document.getElementById('result-glasses') as HTMLElement).textContent = `About ${glasses} glasses (8 oz each)`;
    (document.getElementById('result-morning') as HTMLElement).textContent = morning + ' oz';
    (document.getElementById('result-am') as HTMLElement).textContent = am + ' oz';
    (document.getElementById('result-pm') as HTMLElement).textContent = pm + ' oz';
    (document.getElementById('result-evening') as HTMLElement).textContent = evening + ' oz';
  });

  form?.addEventListener('reset', () => {
    document.getElementById('result-area')?.classList.add('hidden');
  });
</script>
