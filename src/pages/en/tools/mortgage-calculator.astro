---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps, getToolStepType } from '../../../utils/tools';

const lang = 'en';
const tool = getTool('mortgage-calculator', lang);
const siteUrl = 'https://judysylph.com';
const stepType = getToolStepType('mortgage-calculator');
const steps = calculatorSteps[lang][stepType];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, lang, siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, lang, siteUrl, steps) : null;
const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="calc-form" class="space-y-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Loan Amount</label>
          <input type="text" id="principal" placeholder="300,000" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Annual Interest Rate (%)</label>
            <input type="number" id="rate" value="6.5" step="0.1" min="0" max="20" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Loan Term</label>
            <select id="term" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
              <option value="10">10 years</option>
              <option value="15">15 years</option>
              <option value="20">20 years</option>
              <option value="30" selected>30 years</option>
              <option value="40">40 years</option>
            </select>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Repayment Type</label>
          <select id="type" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
            <option value="equal">Fixed Monthly Payment (Level Payment)</option>
            <option value="principal">Equal Principal Payment</option>
          </select>
        </div>
        <button type="submit" class="w-full px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700">Calculate</button>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-primary-900/20 dark:to-secondary-900/20 rounded-xl p-6">
          <div class="grid grid-cols-3 gap-4 mb-4">
            <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
              <div class="text-sm text-gray-600 dark:text-gray-400">Monthly Payment</div>
              <div id="r-monthly" class="text-xl font-bold text-primary-600 dark:text-primary-400">-</div>
              <div id="r-monthly-range" class="text-xs text-gray-500"></div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
              <div class="text-sm text-gray-600 dark:text-gray-400">Total Interest</div>
              <div id="r-interest" class="text-xl font-bold text-red-500">-</div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
              <div class="text-sm text-gray-600 dark:text-gray-400">Total Repayment</div>
              <div id="r-total" class="text-xl font-bold text-gray-900 dark:text-white">-</div>
            </div>
          </div>
          <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
            <div class="flex justify-between text-sm mb-2">
              <span class="text-gray-600 dark:text-gray-400">Principal Ratio</span>
              <span id="r-principal-pct" class="font-medium">-</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 overflow-hidden">
              <div id="r-bar" class="h-full bg-primary-500 rounded-full" style="width:0%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <AdBanner className="mt-8" />

    <div class="mt-8 text-center"><a href="/en/tools" class="text-primary-600 dark:text-primary-400 hover:underline">&larr; Back to Tools</a></div>
  </div>
</Layout>

<script>
  const form = document.getElementById('calc-form') as HTMLFormElement;
  const principalInput = document.getElementById('principal') as HTMLInputElement;

  principalInput?.addEventListener('input', e => {
    const v = (e.target as HTMLInputElement).value.replace(/\D/g,'');
    (e.target as HTMLInputElement).value = Number(v).toLocaleString();
  });

  form?.addEventListener('submit', e => {
    e.preventDefault();
    const P = parseInt(principalInput.value.replace(/,/g,''));
    const r = parseFloat((document.getElementById('rate') as HTMLInputElement).value) / 100 / 12;
    const n = parseInt((document.getElementById('term') as HTMLSelectElement).value) * 12;
    const type = (document.getElementById('type') as HTMLSelectElement).value;

    let monthly: number, totalInterest: number, rangeText = '';

    if (type === 'equal') {
      monthly = Math.round(P * r * Math.pow(1+r,n) / (Math.pow(1+r,n)-1));
      totalInterest = monthly * n - P;
    } else {
      const monthlyPrincipal = P / n;
      const firstMonth = Math.round(monthlyPrincipal + P * r);
      const lastMonth = Math.round(monthlyPrincipal + monthlyPrincipal * r);
      monthly = firstMonth;
      rangeText = `(decreases to $${lastMonth.toLocaleString()})`;
      totalInterest = Math.round((P * r * (n + 1)) / 2);
    }

    const total = P + totalInterest;
    const pct = Math.round((P / total) * 100);

    document.getElementById('result-area')?.classList.remove('hidden');
    document.getElementById('r-monthly')!.textContent = '$' + monthly.toLocaleString();
    document.getElementById('r-monthly-range')!.textContent = rangeText;
    document.getElementById('r-interest')!.textContent = '$' + totalInterest.toLocaleString();
    document.getElementById('r-total')!.textContent = '$' + total.toLocaleString();
    document.getElementById('r-principal-pct')!.textContent = pct + '%';
    (document.getElementById('r-bar') as HTMLElement).style.width = pct + '%';
  });
</script>
