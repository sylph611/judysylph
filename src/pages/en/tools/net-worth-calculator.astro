---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import ToolSeoContent from '../../../components/ToolSeoContent.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps } from '../../../utils/tools';

const lang = 'en';
const tool = getTool('net-worth-calculator', lang);

const siteUrl = 'https://judysylph.com';
const steps = calculatorSteps['en']['financial'];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, 'en', siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, 'en', siteUrl, steps) : null;

const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="networth-form" class="space-y-6">
        <div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">üí∞ Assets</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="cash" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cash & Savings ($)</label>
              <input type="number" id="cash" placeholder="0" min="0"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
            <div>
              <label for="investments" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Investments (Stocks, Funds)</label>
              <input type="number" id="investments" placeholder="0" min="0"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
            <div>
              <label for="realestate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Real Estate (Market Value)</label>
              <input type="number" id="realestate" placeholder="0" min="0"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
            <div>
              <label for="other-assets" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Other Assets (Vehicles, etc.)</label>
              <input type="number" id="other-assets" placeholder="0" min="0"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">üí≥ Liabilities</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="mortgage" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Mortgage Balance</label>
              <input type="number" id="mortgage" placeholder="0" min="0"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
            <div>
              <label for="loans" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Personal/Other Loans</label>
              <input type="number" id="loans" placeholder="0" min="0"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
            <div>
              <label for="card-debt" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Credit Card Debt</label>
              <input type="number" id="card-debt" placeholder="0" min="0"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
            <div>
              <label for="other-debt" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Other Debts</label>
              <input type="number" id="other-debt" placeholder="0" min="0"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <button type="submit" class="flex-1 px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors">Calculate</button>
          <button type="reset" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-xl hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">Reset</button>
        </div>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
          <div class="bg-green-50 dark:bg-green-900/30 rounded-xl p-4 text-center">
            <div class="text-sm text-green-600 dark:text-green-400 mb-1">Total Assets</div>
            <div id="result-assets" class="text-xl font-bold text-green-600 dark:text-green-400">$0</div>
          </div>
          <div class="bg-red-50 dark:bg-red-900/30 rounded-xl p-4 text-center">
            <div class="text-sm text-red-600 dark:text-red-400 mb-1">Total Liabilities</div>
            <div id="result-liabilities" class="text-xl font-bold text-red-600 dark:text-red-400">$0</div>
          </div>
          <div class="bg-primary-50 dark:bg-primary-900/30 rounded-xl p-4 text-center">
            <div class="text-sm text-primary-600 dark:text-primary-400 mb-1">Net Worth</div>
            <div id="result-networth" class="text-2xl font-bold text-primary-600 dark:text-primary-400">$0</div>
          </div>
        </div>

        <div id="health-indicator" class="bg-gray-50 dark:bg-gray-700 rounded-xl p-6">
          <h4 class="font-bold text-gray-900 dark:text-white mb-2">Financial Health</h4>
          <p id="health-message" class="text-gray-700 dark:text-gray-300"></p>
          <div class="mt-4">
            <span class="text-sm text-gray-600 dark:text-gray-400">Debt Ratio: </span>
            <span id="debt-ratio" class="font-medium text-gray-900 dark:text-white">0%</span>
          </div>
        </div>
      </div>
    </div>

    <AdBanner className="mt-8" />

    <!-- SEO Content -->
    <ToolSeoContent
      title={tool?.title || ''}
      description={tool?.description || ''}
      emoji={tool?.emoji || ''}
      category={tool?.category || ''}
      lang={lang}
      slug={tool?.slug || ''}
    />

    <div class="mt-8 text-center">
      <a href="/en/tools" class="text-primary-600 dark:text-primary-400 hover:underline">‚Üê Back to Tools</a>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('networth-form') as HTMLFormElement;

  function formatCurrency(num: number): string {
    return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(num);
  }

  function getHealthMessage(netWorth: number, debtRatio: number): string {
    if (netWorth < 0) return 'Your debts exceed your assets. Focus on debt reduction as a priority.';
    if (debtRatio > 50) return 'High debt ratio. Avoid additional debt and focus on repayment.';
    if (debtRatio > 30) return 'Moderate debt ratio. Continuous management is needed.';
    if (debtRatio > 10) return 'Good financial health. Maintain your current level.';
    return 'Excellent financial health! Focus on investing and growing your wealth.';
  }

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const cash = parseFloat((document.getElementById('cash') as HTMLInputElement).value) || 0;
    const investments = parseFloat((document.getElementById('investments') as HTMLInputElement).value) || 0;
    const realestate = parseFloat((document.getElementById('realestate') as HTMLInputElement).value) || 0;
    const otherAssets = parseFloat((document.getElementById('other-assets') as HTMLInputElement).value) || 0;
    const mortgage = parseFloat((document.getElementById('mortgage') as HTMLInputElement).value) || 0;
    const loans = parseFloat((document.getElementById('loans') as HTMLInputElement).value) || 0;
    const cardDebt = parseFloat((document.getElementById('card-debt') as HTMLInputElement).value) || 0;
    const otherDebt = parseFloat((document.getElementById('other-debt') as HTMLInputElement).value) || 0;

    const totalAssets = cash + investments + realestate + otherAssets;
    const totalLiabilities = mortgage + loans + cardDebt + otherDebt;
    const netWorth = totalAssets - totalLiabilities;
    const debtRatio = totalAssets > 0 ? (totalLiabilities / totalAssets) * 100 : 0;

    const resultArea = document.getElementById('result-area');
    resultArea?.classList.remove('hidden');

    (document.getElementById('result-assets') as HTMLElement).textContent = formatCurrency(totalAssets);
    (document.getElementById('result-liabilities') as HTMLElement).textContent = formatCurrency(totalLiabilities);
    (document.getElementById('result-networth') as HTMLElement).textContent = formatCurrency(netWorth);
    (document.getElementById('debt-ratio') as HTMLElement).textContent = debtRatio.toFixed(1) + '%';
    (document.getElementById('health-message') as HTMLElement).textContent = getHealthMessage(netWorth, debtRatio);
  });

  form?.addEventListener('reset', () => {
    document.getElementById('result-area')?.classList.add('hidden');
  });
</script>
