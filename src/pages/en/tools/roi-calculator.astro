---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import ToolSeoContent from '../../../components/ToolSeoContent.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps } from '../../../utils/tools';

const lang = 'en';
const tool = getTool('roi-calculator', lang);

const siteUrl = 'https://judysylph.com';
const steps = calculatorSteps['en']['financial'];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, 'en', siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, 'en', siteUrl, steps) : null;

const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="roi-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="investment" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Initial Investment ($)</label>
            <input type="number" id="investment" placeholder="10000" min="0"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="final-value" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Final Value ($)</label>
            <input type="number" id="final-value" placeholder="15000" min="0"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div class="md:col-span-2">
            <label for="years" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Investment Period (Years)</label>
            <input type="number" id="years" placeholder="3" min="0.1" max="100" step="0.1"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
        </div>

        <div class="flex gap-3">
          <button type="submit" class="flex-1 px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors">Calculate</button>
          <button type="reset" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-xl hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">Reset</button>
        </div>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">Investment</div>
            <div id="result-investment" class="text-lg font-bold text-gray-900 dark:text-white">$0</div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">Profit/Loss</div>
            <div id="result-profit" class="text-lg font-bold text-green-600 dark:text-green-400">$0</div>
          </div>
          <div class="bg-primary-50 dark:bg-primary-900/30 rounded-xl p-4 text-center">
            <div class="text-sm text-primary-600 dark:text-primary-400 mb-1">Total ROI</div>
            <div id="result-roi" class="text-xl font-bold text-primary-600 dark:text-primary-400">0%</div>
          </div>
          <div class="bg-green-50 dark:bg-green-900/30 rounded-xl p-4 text-center">
            <div class="text-sm text-green-600 dark:text-green-400 mb-1">Annualized (CAGR)</div>
            <div id="result-cagr" class="text-xl font-bold text-green-600 dark:text-green-400">0%</div>
          </div>
        </div>

        <div class="bg-blue-50 dark:bg-blue-900/30 rounded-xl p-4">
          <p class="text-sm text-blue-800 dark:text-blue-200">
            <strong>CAGR (Compound Annual Growth Rate):</strong> The average annual rate of return over the investment period. Useful for comparing long-term investment performance.
          </p>
        </div>
      </div>
    </div>

    <AdBanner className="mt-8" />

    <!-- SEO Content -->
    <ToolSeoContent
      title={tool?.title || ''}
      description={tool?.description || ''}
      emoji={tool?.emoji || ''}
      category={tool?.category || ''}
      lang={lang}
      slug={tool?.slug || ''}
    />

    <div class="mt-8 text-center">
      <a href="/en/tools" class="text-primary-600 dark:text-primary-400 hover:underline">‚Üê Back to Tools</a>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('roi-form') as HTMLFormElement;

  function formatCurrency(num: number): string {
    return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(num);
  }

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const investment = parseFloat((document.getElementById('investment') as HTMLInputElement).value);
    const finalValue = parseFloat((document.getElementById('final-value') as HTMLInputElement).value);
    const years = parseFloat((document.getElementById('years') as HTMLInputElement).value);

    if (!investment || !finalValue || !years) {
      alert('Please fill in all fields');
      return;
    }

    const profit = finalValue - investment;
    const roi = ((finalValue - investment) / investment) * 100;
    const cagr = (Math.pow(finalValue / investment, 1 / years) - 1) * 100;

    const resultArea = document.getElementById('result-area');
    resultArea?.classList.remove('hidden');

    (document.getElementById('result-investment') as HTMLElement).textContent = formatCurrency(investment);
    (document.getElementById('result-profit') as HTMLElement).textContent = (profit >= 0 ? '+' : '') + formatCurrency(profit);
    (document.getElementById('result-roi') as HTMLElement).textContent = (roi >= 0 ? '+' : '') + roi.toFixed(2) + '%';
    (document.getElementById('result-cagr') as HTMLElement).textContent = (cagr >= 0 ? '+' : '') + cagr.toFixed(2) + '%';
  });

  form?.addEventListener('reset', () => {
    document.getElementById('result-area')?.classList.add('hidden');
  });
</script>
