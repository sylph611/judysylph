---
import Layout from '../../../layouts/Layout.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps } from '../../../utils/tools';

const lang = 'ko';
const tool = getTool('calorie-calculator', lang);

const siteUrl = 'https://judysylph.com';
const steps = calculatorSteps['ko']['health'];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "HealthApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "KRW" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, 'ko', siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, 'ko', siteUrl, steps) : null;

const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
    </div>

    <!-- Tool Area -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="calorie-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="gender" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              성별
            </label>
            <select
              id="gender"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            >
              <option value="male">남성</option>
              <option value="female">여성</option>
            </select>
          </div>
          <div>
            <label for="age" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              나이
            </label>
            <input
              type="number"
              id="age"
              placeholder="25"
              min="10"
              max="120"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            />
          </div>
          <div>
            <label for="height" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              키 (cm)
            </label>
            <input
              type="number"
              id="height"
              placeholder="170"
              min="100"
              max="250"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            />
          </div>
          <div>
            <label for="weight" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              몸무게 (kg)
            </label>
            <input
              type="number"
              id="weight"
              placeholder="65"
              min="30"
              max="300"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            />
          </div>
        </div>

        <div>
          <label for="activity" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            활동량
          </label>
          <select
            id="activity"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
          >
            <option value="1.2">거의 운동 안함 (사무직)</option>
            <option value="1.375">가벼운 운동 (주 1-3회)</option>
            <option value="1.55" selected>보통 운동 (주 3-5회)</option>
            <option value="1.725">활발한 운동 (주 6-7회)</option>
            <option value="1.9">매우 활발 (운동선수급)</option>
          </select>
        </div>

        <div class="flex gap-3">
          <button
            type="submit"
            class="flex-1 px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors"
          >
            계산하기
          </button>
          <button
            type="reset"
            class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-xl hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
          >
            초기화
          </button>
        </div>
      </form>

      <!-- Results -->
      <div id="result-area" class="mt-8 hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">기초대사량 (BMR)</div>
            <div id="result-bmr" class="text-2xl font-bold text-gray-900 dark:text-white">0 kcal</div>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">아무것도 안 해도 소모되는 칼로리</p>
          </div>
          <div class="bg-primary-50 dark:bg-primary-900/30 rounded-xl p-4 text-center">
            <div class="text-sm text-primary-600 dark:text-primary-400 mb-1">일일 권장 칼로리 (TDEE)</div>
            <div id="result-tdee" class="text-2xl font-bold text-primary-600 dark:text-primary-400">0 kcal</div>
            <p class="text-xs text-primary-500 dark:text-primary-300 mt-1">현재 체중 유지에 필요한 칼로리</p>
          </div>
        </div>

        <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-6">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">목표별 권장 칼로리</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="text-center p-4 bg-white dark:bg-gray-800 rounded-lg">
              <div class="text-blue-600 dark:text-blue-400 font-medium mb-1">체중 감량</div>
              <div id="result-lose" class="text-xl font-bold text-gray-900 dark:text-white">0 kcal</div>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">-500 kcal (주 0.5kg 감량)</p>
            </div>
            <div class="text-center p-4 bg-white dark:bg-gray-800 rounded-lg border-2 border-primary-500">
              <div class="text-primary-600 dark:text-primary-400 font-medium mb-1">체중 유지</div>
              <div id="result-maintain" class="text-xl font-bold text-gray-900 dark:text-white">0 kcal</div>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">현재 체중 유지</p>
            </div>
            <div class="text-center p-4 bg-white dark:bg-gray-800 rounded-lg">
              <div class="text-green-600 dark:text-green-400 font-medium mb-1">체중 증가</div>
              <div id="result-gain" class="text-xl font-bold text-gray-900 dark:text-white">0 kcal</div>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">+500 kcal (주 0.5kg 증가)</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Back Link -->
    <div class="mt-8 text-center">
      <a href="/ko/tools" class="text-primary-600 dark:text-primary-400 hover:underline">
        ← 도구 목록으로 돌아가기
      </a>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('calorie-form') as HTMLFormElement;
  const genderSelect = document.getElementById('gender') as HTMLSelectElement;
  const ageInput = document.getElementById('age') as HTMLInputElement;
  const heightInput = document.getElementById('height') as HTMLInputElement;
  const weightInput = document.getElementById('weight') as HTMLInputElement;
  const activitySelect = document.getElementById('activity') as HTMLSelectElement;
  const resultArea = document.getElementById('result-area');
  const resultBmr = document.getElementById('result-bmr');
  const resultTdee = document.getElementById('result-tdee');
  const resultLose = document.getElementById('result-lose');
  const resultMaintain = document.getElementById('result-maintain');
  const resultGain = document.getElementById('result-gain');

  function calculateBMR(gender: string, weight: number, height: number, age: number): number {
    // Mifflin-St Jeor Equation
    if (gender === 'male') {
      return 10 * weight + 6.25 * height - 5 * age + 5;
    } else {
      return 10 * weight + 6.25 * height - 5 * age - 161;
    }
  }

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const gender = genderSelect.value;
    const age = parseInt(ageInput.value);
    const height = parseFloat(heightInput.value);
    const weight = parseFloat(weightInput.value);
    const activity = parseFloat(activitySelect.value);

    if (!age || !height || !weight) {
      alert('모든 항목을 입력해주세요');
      return;
    }

    const bmr = calculateBMR(gender, weight, height, age);
    const tdee = bmr * activity;

    resultArea?.classList.remove('hidden');
    if (resultBmr) resultBmr.textContent = Math.round(bmr) + ' kcal';
    if (resultTdee) resultTdee.textContent = Math.round(tdee) + ' kcal';
    if (resultLose) resultLose.textContent = Math.round(tdee - 500) + ' kcal';
    if (resultMaintain) resultMaintain.textContent = Math.round(tdee) + ' kcal';
    if (resultGain) resultGain.textContent = Math.round(tdee + 500) + ' kcal';

    resultArea?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  });

  form?.addEventListener('reset', () => {
    resultArea?.classList.add('hidden');
  });
</script>
