---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import ToolSeoContent from '../../../components/ToolSeoContent.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps, getToolStepType } from '../../../utils/tools';

const lang = 'ko';
const tool = getTool('jeonse-loan', lang);
const siteUrl = 'https://judysylph.com';
const stepType = getToolStepType('jeonse-loan');
const steps = calculatorSteps[lang][stepType];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "KRW" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, lang, siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, lang, siteUrl, steps) : null;
const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
      <p class="text-sm text-primary-600 dark:text-primary-400 mt-2">2026년 금리 기준</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="calc-form" class="space-y-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">대출금액 (원)</label>
          <input type="text" id="loanAmount" placeholder="200,000,000" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">연이자율 (%)</label>
            <input type="number" id="rate" value="4.5" step="0.1" min="0" max="20" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">대출기간</label>
            <select id="term" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
              <option value="12">1년</option>
              <option value="24" selected>2년</option>
              <option value="36">3년</option>
            </select>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">상환방식</label>
          <select id="repayType" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
            <option value="bullet">만기일시상환</option>
            <option value="equal">원리금균등상환</option>
          </select>
        </div>
        <button type="submit" class="w-full px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700">계산하기</button>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-primary-900/20 dark:to-secondary-900/20 rounded-xl p-6">
          <div class="grid grid-cols-2 gap-4 mb-4">
            <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
              <div class="text-sm text-gray-600 dark:text-gray-400">월 상환금</div>
              <div id="r-monthly" class="text-2xl font-bold text-primary-600 dark:text-primary-400">-</div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
              <div class="text-sm text-gray-600 dark:text-gray-400">총 이자</div>
              <div id="r-interest" class="text-2xl font-bold text-gray-900 dark:text-white">-</div>
            </div>
          </div>
          <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400">총 상환금액</div>
            <div id="r-total" class="text-xl font-bold text-gray-900 dark:text-white">-</div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 rounded-xl p-4">
      <h4 class="font-bold text-blue-800 dark:text-blue-200 mb-2">2026년 전세대출 금리</h4>
      <p class="text-sm text-blue-700 dark:text-blue-300">버팀목: 1.8~2.4% / 청년: 1.5~2.1% / 시중은행: 4.0~5.5%</p>
    </div>
    <AdBanner className="mt-8" />

    <!-- SEO Content -->
    <ToolSeoContent
      title={tool?.title || ''}
      description={tool?.description || ''}
      emoji={tool?.emoji || ''}
      category={tool?.category || ''}
      lang={lang}
      slug={tool?.slug || ''}
    />

    <div class="mt-8 text-center"><a href="/ko/tools" class="text-primary-600 dark:text-primary-400 hover:underline">← 도구 목록</a></div>
  </div>
</Layout>

<script>
  const form = document.getElementById('calc-form') as HTMLFormElement;
  const loanInput = document.getElementById('loanAmount') as HTMLInputElement;

  loanInput?.addEventListener('input', e => {
    const v = (e.target as HTMLInputElement).value.replace(/\D/g,'');
    (e.target as HTMLInputElement).value = Number(v).toLocaleString('ko-KR');
  });

  form?.addEventListener('submit', e => {
    e.preventDefault();
    const loan = parseInt(loanInput.value.replace(/,/g,''));
    const rate = parseFloat((document.getElementById('rate') as HTMLInputElement).value) / 100 / 12;
    const months = parseInt((document.getElementById('term') as HTMLSelectElement).value);
    const type = (document.getElementById('repayType') as HTMLSelectElement).value;

    let monthly: number, totalInterest: number;
    if (type === 'bullet') {
      monthly = Math.round(loan * rate);
      totalInterest = monthly * months;
    } else {
      monthly = Math.round(loan * rate * Math.pow(1+rate,months) / (Math.pow(1+rate,months)-1));
      totalInterest = monthly * months - loan;
    }

    document.getElementById('result-area')?.classList.remove('hidden');
    document.getElementById('r-monthly')!.textContent = monthly.toLocaleString('ko-KR') + '원';
    document.getElementById('r-interest')!.textContent = totalInterest.toLocaleString('ko-KR') + '원';
    document.getElementById('r-total')!.textContent = (loan + totalInterest).toLocaleString('ko-KR') + '원';
  });
</script>
