---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import ToolSeoContent from '../../../components/ToolSeoContent.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps } from '../../../utils/tools';

const lang = 'ko';
const tool = getTool('stock-profit', lang);

const siteUrl = 'https://judysylph.com';
const steps = calculatorSteps['ko']['financial'];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, 'ko', siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, 'ko', siteUrl, steps) : null;

const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="stock-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="buy-price" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">매수가 (원)</label>
            <input type="number" id="buy-price" placeholder="50000" min="0"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="sell-price" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">매도가 (원)</label>
            <input type="number" id="sell-price" placeholder="55000" min="0"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="quantity" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">수량 (주)</label>
            <input type="number" id="quantity" placeholder="100" min="1"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="commission" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">수수료율 (%)</label>
            <input type="number" id="commission" placeholder="0.015" min="0" max="1" step="0.001" value="0.015"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
        </div>

        <div class="flex gap-3">
          <button type="submit" class="flex-1 px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors">계산하기</button>
          <button type="reset" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-xl hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">초기화</button>
        </div>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">총 매수금액</div>
            <div id="result-buy-total" class="text-lg font-bold text-gray-900 dark:text-white">₩0</div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">총 매도금액</div>
            <div id="result-sell-total" class="text-lg font-bold text-gray-900 dark:text-white">₩0</div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">총 수수료</div>
            <div id="result-commission" class="text-lg font-bold text-red-600 dark:text-red-400">₩0</div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">세금 (0.23%)</div>
            <div id="result-tax" class="text-lg font-bold text-red-600 dark:text-red-400">₩0</div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div id="profit-box" class="bg-green-50 dark:bg-green-900/30 rounded-xl p-6 text-center">
            <div class="text-sm text-green-600 dark:text-green-400 mb-1">순이익</div>
            <div id="result-profit" class="text-3xl font-bold text-green-600 dark:text-green-400">₩0</div>
          </div>
          <div class="bg-primary-50 dark:bg-primary-900/30 rounded-xl p-6 text-center">
            <div class="text-sm text-primary-600 dark:text-primary-400 mb-1">수익률</div>
            <div id="result-roi" class="text-3xl font-bold text-primary-600 dark:text-primary-400">0%</div>
          </div>
        </div>
      </div>
    </div>

    <AdBanner className="mt-8" />

    <!-- SEO Content -->
    <ToolSeoContent
      title={tool?.title || ''}
      description={tool?.description || ''}
      emoji={tool?.emoji || ''}
      category={tool?.category || ''}
      lang={lang}
      slug={tool?.slug || ''}
    />

    <div class="mt-8 text-center">
      <a href="/ko/tools" class="text-primary-600 dark:text-primary-400 hover:underline">← 도구 목록으로</a>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('stock-form') as HTMLFormElement;

  function formatCurrency(num: number): string {
    return new Intl.NumberFormat('ko-KR', { style: 'currency', currency: 'KRW' }).format(num);
  }

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const buyPrice = parseFloat((document.getElementById('buy-price') as HTMLInputElement).value);
    const sellPrice = parseFloat((document.getElementById('sell-price') as HTMLInputElement).value);
    const quantity = parseFloat((document.getElementById('quantity') as HTMLInputElement).value);
    const commissionRate = parseFloat((document.getElementById('commission') as HTMLInputElement).value) / 100;

    if (!buyPrice || !sellPrice || !quantity) {
      alert('모든 필드를 입력해주세요');
      return;
    }

    const buyTotal = buyPrice * quantity;
    const sellTotal = sellPrice * quantity;
    const buyCommission = buyTotal * commissionRate;
    const sellCommission = sellTotal * commissionRate;
    const totalCommission = buyCommission + sellCommission;
    const tax = sellTotal * 0.0023; // 증권거래세 0.23%
    const grossProfit = sellTotal - buyTotal;
    const netProfit = grossProfit - totalCommission - tax;
    const roi = (netProfit / buyTotal) * 100;

    const resultArea = document.getElementById('result-area');
    resultArea?.classList.remove('hidden');

    (document.getElementById('result-buy-total') as HTMLElement).textContent = formatCurrency(buyTotal);
    (document.getElementById('result-sell-total') as HTMLElement).textContent = formatCurrency(sellTotal);
    (document.getElementById('result-commission') as HTMLElement).textContent = formatCurrency(totalCommission);
    (document.getElementById('result-tax') as HTMLElement).textContent = formatCurrency(tax);
    (document.getElementById('result-profit') as HTMLElement).textContent = (netProfit >= 0 ? '+' : '') + formatCurrency(netProfit);
    (document.getElementById('result-roi') as HTMLElement).textContent = (roi >= 0 ? '+' : '') + roi.toFixed(2) + '%';

    const profitBox = document.getElementById('profit-box');
    if (netProfit >= 0) {
      profitBox?.classList.remove('bg-red-50', 'dark:bg-red-900/30');
      profitBox?.classList.add('bg-green-50', 'dark:bg-green-900/30');
      (document.getElementById('result-profit') as HTMLElement).classList.remove('text-red-600', 'dark:text-red-400');
      (document.getElementById('result-profit') as HTMLElement).classList.add('text-green-600', 'dark:text-green-400');
    } else {
      profitBox?.classList.remove('bg-green-50', 'dark:bg-green-900/30');
      profitBox?.classList.add('bg-red-50', 'dark:bg-red-900/30');
      (document.getElementById('result-profit') as HTMLElement).classList.remove('text-green-600', 'dark:text-green-400');
      (document.getElementById('result-profit') as HTMLElement).classList.add('text-red-600', 'dark:text-red-400');
    }
  });

  form?.addEventListener('reset', () => {
    document.getElementById('result-area')?.classList.add('hidden');
  });
</script>
