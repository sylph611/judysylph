  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const carKm = parseFloat((document.getElementById('car-km') as HTMLInputElement).value) || 0;
    const flightHours = parseFloat((document.getElementById('flight-hours') as HTMLInputElement).value) || 0;
