---
import Layout from '../../../layouts/Layout.astro';
import AdBanner from '../../../components/AdBanner.astro';
import { getTool, generateToolBreadcrumbSchema, generateToolHowToSchema, calculatorSteps, getToolStepType } from '../../../utils/tools';

const lang = 'ko';
const tool = getTool('age-calculator', lang);

const siteUrl = 'https://judysylph.com';
const stepType = getToolStepType('age-calculator');
const steps = calculatorSteps['ko'][stepType];

const webAppSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication",
  "operatingSystem": "All",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "KRW" }
};

const breadcrumbSchema = tool ? generateToolBreadcrumbSchema(tool, 'ko', siteUrl) : null;
const howToSchema = tool ? generateToolHowToSchema(tool, 'ko', siteUrl, steps) : null;

const jsonLd = [webAppSchema, breadcrumbSchema, howToSchema].filter(Boolean);
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
    </div>

    <!-- Tool Area -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <div class="space-y-6">
        <div>
          <label for="birth-date" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            생년월일
          </label>
          <input
            type="date"
            id="birth-date"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
          />
        </div>

        <button
          id="calculate-btn"
          type="button"
          class="w-full px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors"
        >
          계산하기
        </button>
      </div>

      <!-- Result -->
      <div id="result-area" class="mt-8 hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl p-6 text-white text-center">
            <div class="text-sm opacity-90 mb-2">만 나이</div>
            <div class="text-5xl font-bold mb-2"><span id="intl-age">0</span>세</div>
            <div id="intl-detail" class="text-sm opacity-90"></div>
          </div>
          <div class="bg-gradient-to-br from-secondary-500 to-secondary-600 rounded-2xl p-6 text-white text-center">
            <div class="text-sm opacity-90 mb-2">한국 나이</div>
            <div class="text-5xl font-bold mb-2"><span id="korean-age">0</span>세</div>
            <div class="text-sm opacity-90">출생년도 기준</div>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div id="total-months" class="text-2xl font-bold text-primary-600 dark:text-primary-400">0</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">개월</div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div id="total-weeks" class="text-2xl font-bold text-primary-600 dark:text-primary-400">0</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">주</div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div id="total-days" class="text-2xl font-bold text-primary-600 dark:text-primary-400">0</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">일</div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4 text-center">
            <div id="next-birthday" class="text-2xl font-bold text-primary-600 dark:text-primary-400">0</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">다음 생일까지</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Info Section -->
    <div class="mt-8 space-y-4">
      <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-5">
        <h2 class="font-bold text-blue-800 dark:text-blue-200 mb-3">만 나이 vs 한국 나이</h2>
        <ul class="text-sm text-blue-700 dark:text-blue-300 space-y-2">
          <li><strong>만 나이</strong>: 생일을 기준으로 계산하며, 2023년 6월부터 한국의 공식 나이 기준이 되었습니다.</li>
          <li><strong>한국 나이 (세는 나이)</strong>: 태어난 해에 1살, 매년 1월 1일에 한 살씩 추가되는 전통적인 계산법입니다.</li>
          <li><strong>연 나이</strong>: 현재 연도 - 출생 연도로 계산하며, 일부 법률(청소년 보호법 등)에서 사용됩니다.</li>
        </ul>
      </div>

      <div class="bg-green-50 dark:bg-green-900/20 rounded-xl p-5">
        <h2 class="font-bold text-green-800 dark:text-green-200 mb-3">나이 계산이 필요한 경우</h2>
        <ul class="text-sm text-green-700 dark:text-green-300 space-y-1">
          <li>• 취업, 입학 지원 시 만 나이 확인</li>
          <li>• 보험 가입, 의료 서비스 이용 시</li>
          <li>• 운전면허, 주민등록증 발급 자격 확인</li>
          <li>• 청소년 할인, 경로 우대 혜택 확인</li>
          <li>• 군 입대, 연금 수령 자격 확인</li>
        </ul>
      </div>

      <div class="bg-purple-50 dark:bg-purple-900/20 rounded-xl p-5">
        <h2 class="font-bold text-purple-800 dark:text-purple-200 mb-3">주요 나이 기준 (2026년)</h2>
        <div class="grid grid-cols-2 gap-4 text-sm text-purple-700 dark:text-purple-300">
          <div>
            <p>• 만 18세: 선거권, 운전면허</p>
            <p>• 만 19세: 성인 (음주, 흡연)</p>
            <p>• 만 65세: 경로 우대</p>
          </div>
          <div>
            <p>• 만 13세: SNS 가입 가능</p>
            <p>• 만 15세: 근로 가능</p>
            <p>• 만 60세: 정년 기준</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Back Link -->
    <AdBanner className="mt-8" />

    <div class="mt-8 text-center">
      <a href="/ko/tools" class="text-primary-600 dark:text-primary-400 hover:underline">
        ← 도구 목록으로 돌아가기
      </a>
    </div>
  </div>
</Layout>

<script>
  const birthDateInput = document.getElementById('birth-date') as HTMLInputElement;
  const calculateBtn = document.getElementById('calculate-btn');
  const resultArea = document.getElementById('result-area');

  function calculate() {
    const birthDate = new Date(birthDateInput.value);
    const today = new Date();

    if (isNaN(birthDate.getTime())) {
      alert('생년월일을 입력해주세요');
      return;
    }

    if (birthDate > today) {
      alert('생년월일은 오늘 이전이어야 합니다');
      return;
    }

    // 만 나이 계산
    let intlAge = today.getFullYear() - birthDate.getFullYear();
    const monthDiff = today.getMonth() - birthDate.getMonth();
    const dayDiff = today.getDate() - birthDate.getDate();

    if (monthDiff < 0 || (monthDiff === 0 && dayDiff < 0)) {
      intlAge--;
    }

    // 한국 나이 계산 (2023년부터 만 나이로 통일되었지만 참고용)
    const koreanAge = today.getFullYear() - birthDate.getFullYear() + 1;

    // 상세 계산
    const diffTime = today.getTime() - birthDate.getTime();
    const totalDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));
    const totalWeeks = Math.floor(totalDays / 7);
    const totalMonths = intlAge * 12 + Math.max(0, monthDiff);

    // 다음 생일까지
    let nextBirthday = new Date(today.getFullYear(), birthDate.getMonth(), birthDate.getDate());
    if (nextBirthday <= today) {
      nextBirthday = new Date(today.getFullYear() + 1, birthDate.getMonth(), birthDate.getDate());
    }
    const daysUntilBirthday = Math.ceil((nextBirthday.getTime() - today.getTime()) / (1000 * 60 * 60 * 24));

    // 만 나이 상세
    let months = today.getMonth() - birthDate.getMonth();
    let days = today.getDate() - birthDate.getDate();
    if (days < 0) {
      months--;
      const lastMonth = new Date(today.getFullYear(), today.getMonth(), 0);
      days += lastMonth.getDate();
    }
    if (months < 0) {
      months += 12;
    }

    // 결과 표시
    resultArea?.classList.remove('hidden');

    const intlAgeEl = document.getElementById('intl-age');
    const intlDetailEl = document.getElementById('intl-detail');
    const koreanAgeEl = document.getElementById('korean-age');
    const totalMonthsEl = document.getElementById('total-months');
    const totalWeeksEl = document.getElementById('total-weeks');
    const totalDaysEl = document.getElementById('total-days');
    const nextBirthdayEl = document.getElementById('next-birthday');

    if (intlAgeEl) intlAgeEl.textContent = intlAge.toString();
    if (intlDetailEl) intlDetailEl.textContent = `${intlAge}년 ${months}개월 ${days}일`;
    if (koreanAgeEl) koreanAgeEl.textContent = koreanAge.toString();
    if (totalMonthsEl) totalMonthsEl.textContent = totalMonths.toLocaleString();
    if (totalWeeksEl) totalWeeksEl.textContent = totalWeeks.toLocaleString();
    if (totalDaysEl) totalDaysEl.textContent = totalDays.toLocaleString();
    if (nextBirthdayEl) nextBirthdayEl.textContent = daysUntilBirthday + '일';
  }

  calculateBtn?.addEventListener('click', calculate);
  birthDateInput?.addEventListener('change', calculate);
</script>
