---
import Layout from '../../../layouts/Layout.astro';
import { getTool } from '../../../utils/tools';

const lang = 'ko';
const tool = getTool('annual-leave-calculator', lang);

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": tool?.title,
  "description": tool?.description,
  "applicationCategory": "FinanceApplication"
};
---

<Layout title={`${tool?.title} | JudySylph`} description={tool?.description} jsonLd={jsonLd}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="text-5xl mb-4">{tool?.emoji}</div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tool?.title}</h1>
      <p class="text-gray-600 dark:text-gray-400">{tool?.description}</p>
      <p class="text-sm text-primary-600 dark:text-primary-400 mt-2">2026년 근로기준법 기준</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg">
      <form id="calc-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="startDate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">입사일</label>
            <input type="date" id="startDate" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="calcDate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">계산 기준일</label>
            <input type="date" id="calcDate" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="dailyWage" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">1일 통상임금 (원)</label>
            <input type="text" id="dailyWage" placeholder="150,000" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            <p class="text-xs text-gray-500 mt-1">월 통상임금 ÷ 월 소정근로시간 × 8시간</p>
          </div>
          <div>
            <label for="unusedDays" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">미사용 연차일수</label>
            <input type="number" id="unusedDays" placeholder="5" min="0" max="50" required class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
        </div>

        <div class="flex gap-3">
          <button type="submit" class="flex-1 px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors">계산하기</button>
          <button type="reset" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-xl hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">초기화</button>
        </div>
      </form>

      <div id="result-area" class="mt-8 hidden">
        <div class="bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-primary-900/20 dark:to-secondary-900/20 rounded-xl p-6">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">계산 결과</h3>

          <div class="grid grid-cols-2 gap-4 mb-4">
            <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
              <div class="text-sm text-gray-600 dark:text-gray-400">근속연수</div>
              <div id="tenure" class="text-xl font-bold text-gray-900 dark:text-white">-</div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
              <div class="text-sm text-gray-600 dark:text-gray-400">법정 연차일수</div>
              <div id="totalLeave" class="text-xl font-bold text-gray-900 dark:text-white">-</div>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">미사용 연차수당</div>
            <div id="allowance" class="text-3xl font-bold text-primary-600 dark:text-primary-400">-</div>
          </div>

          <div class="mt-4 p-4 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg">
            <p class="text-sm text-yellow-800 dark:text-yellow-200">
              <strong>계산식:</strong> 연차수당 = 1일 통상임금 × 미사용 연차일수
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 rounded-xl p-4">
      <h4 class="font-bold text-blue-800 dark:text-blue-200 mb-2">2026년 연차 발생 기준</h4>
      <ul class="text-sm text-blue-700 dark:text-blue-300 space-y-1">
        <li>• 1년 미만: 1개월 개근 시 1일씩 (최대 11일)</li>
        <li>• 1년 이상: 15일 + 2년마다 1일 추가 (최대 25일)</li>
        <li>• 연차 사용 촉진 제도 시행 시 미사용분 소멸 가능</li>
      </ul>
    </div>

    <div class="mt-8 text-center">
      <a href="/ko/tools" class="text-primary-600 dark:text-primary-400 hover:underline">← 도구 목록으로 돌아가기</a>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('calc-form') as HTMLFormElement;
  const dailyWageInput = document.getElementById('dailyWage') as HTMLInputElement;

  dailyWageInput?.addEventListener('input', (e) => {
    let value = (e.target as HTMLInputElement).value.replace(/[^\d]/g, '');
    (e.target as HTMLInputElement).value = Number(value).toLocaleString('ko-KR');
  });

  function calculateAnnualLeave(yearsWorked: number): number {
    if (yearsWorked < 1) return Math.min(Math.floor(yearsWorked * 12), 11);
    const baseLeave = 15;
    const additionalLeave = Math.floor((yearsWorked - 1) / 2);
    return Math.min(baseLeave + additionalLeave, 25);
  }

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    const startDate = new Date((document.getElementById('startDate') as HTMLInputElement).value);
    const calcDate = new Date((document.getElementById('calcDate') as HTMLInputElement).value);
    const dailyWage = parseInt(dailyWageInput.value.replace(/,/g, ''));
    const unusedDays = parseInt((document.getElementById('unusedDays') as HTMLInputElement).value);

    const diffTime = calcDate.getTime() - startDate.getTime();
    const yearsWorked = diffTime / (1000 * 60 * 60 * 24 * 365);
    const years = Math.floor(yearsWorked);
    const months = Math.floor((yearsWorked - years) * 12);

    const totalLeave = calculateAnnualLeave(yearsWorked);
    const allowance = dailyWage * unusedDays;

    document.getElementById('result-area')?.classList.remove('hidden');
    document.getElementById('tenure')!.textContent = `${years}년 ${months}개월`;
    document.getElementById('totalLeave')!.textContent = `${totalLeave}일`;
    document.getElementById('allowance')!.textContent = allowance.toLocaleString('ko-KR') + '원';
  });

  form?.addEventListener('reset', () => {
    document.getElementById('result-area')?.classList.add('hidden');
  });
</script>
