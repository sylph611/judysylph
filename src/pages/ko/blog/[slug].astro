---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { getAllPosts, getRelatedPosts, calculateReadingTime, generateFaqSchema, generateArticleSchema } from '../../../utils/blog';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ id }) => id.startsWith('ko/'));
  return posts.map((post) => {
    // Remove the language prefix from slug (ko/my-post -> my-post)
    const slug = post.slug.replace(/^ko\//, '');
    return {
      params: { slug },
      props: { post, slug }
    };
  });
}

const { post, slug } = Astro.props;
const lang = 'ko';

if (!post) {
  return Astro.redirect('/ko/blog');
}

const { Content } = await post.render();
const readingTime = calculateReadingTime(post.body);

// Get related posts (compare without lang prefix)
const allPosts = await getAllPosts(lang);
const relatedPosts = post.data.relatedPosts?.length > 0
  ? allPosts.filter(p => post.data.relatedPosts.includes(p.slug.replace(/^ko\//, '')))
  : allPosts.filter(p => p.slug !== post.slug).slice(0, 2);

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://judysylph.com';
const pageUrl = `${siteUrl}/ko/blog/${slug}`;
const pageTitle = `${post.data.title} | JudySylph 블로그`;
const ogImage = `${siteUrl}/og/blog.svg`;

// Generate structured data
const faqSchema = generateFaqSchema(post.data.faq, pageUrl);
const articleSchema = generateArticleSchema(post, pageUrl, siteUrl);

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "홈",
      "item": `${siteUrl}/ko`
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "블로그",
      "item": `${siteUrl}/ko/blog`
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": post.data.title,
      "item": pageUrl
    }
  ]
};
---

<Layout title={pageTitle} description={post.data.description} ogImage={ogImage}>
  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} slot="head" />

  <!-- Article Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} slot="head" />

  <!-- FAQ Schema -->
  {faqSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />
  )}

  <article class="max-w-3xl mx-auto px-4 py-8">
    <!-- Header -->
    <header class="text-center mb-8">
      <div class="text-6xl mb-4">{post.data.emoji}</div>
      <div class="flex items-center justify-center gap-3 mb-4">
        <span class="text-sm px-3 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full">
          {post.data.category}
        </span>
        <span class="text-sm text-gray-500">{readingTime}분 읽기</span>
      </div>
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {post.data.title}
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-4">
        {post.data.description}
      </p>
      <time class="text-sm text-gray-500" datetime={post.data.publishDate.toISOString()}>
        {post.data.publishDate.toLocaleDateString('ko-KR', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>

      <!-- Keywords -->
      <div class="mt-4 flex flex-wrap justify-center gap-2">
        {post.data.keywords.map((keyword) => (
          <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded">
            #{keyword}
          </span>
        ))}
      </div>
    </header>

    <!-- Content -->
    <div class="prose prose-lg dark:prose-invert max-w-none
      prose-headings:text-gray-900 dark:prose-headings:text-white
      prose-h2:text-2xl prose-h2:font-bold prose-h2:mt-10 prose-h2:mb-4
      prose-h3:text-xl prose-h3:font-bold prose-h3:mt-6 prose-h3:mb-3
      prose-p:text-gray-700 dark:prose-p:text-gray-300 prose-p:leading-relaxed prose-p:mb-4
      prose-li:text-gray-700 dark:prose-li:text-gray-300
      prose-strong:text-gray-900 dark:prose-strong:text-white
      prose-a:text-primary-600 dark:prose-a:text-primary-400 prose-a:no-underline hover:prose-a:underline
      prose-ul:my-4 prose-ol:my-4
    ">
      <Content />
    </div>

    <!-- CTA: Related Tool -->
    {post.data.relatedTool && (
      <div class="mt-10 p-6 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-2xl text-white text-center">
        <h3 class="text-xl font-bold mb-2">직접 계산해보세요!</h3>
        <p class="opacity-90 mb-4">복잡한 계산은 계산기에게 맡기세요.</p>
        <a
          href={post.data.relatedTool}
          class="inline-block px-6 py-3 bg-white text-primary-600 font-medium rounded-xl hover:bg-gray-100 transition-colors"
        >
          계산기 바로가기 →
        </a>
      </div>
    )}

    <!-- FAQ Section -->
    {post.data.faq && post.data.faq.length > 0 && (
      <section class="mt-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">자주 묻는 질문</h2>
        <div class="space-y-4">
          {post.data.faq.map((item, index) => (
            <details class="group bg-gray-50 dark:bg-gray-800 rounded-xl overflow-hidden">
              <summary class="flex items-center justify-between p-4 cursor-pointer font-medium text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                <span class="flex items-center gap-3">
                  <span class="text-primary-600 dark:text-primary-400">Q{index + 1}.</span>
                  {item.question}
                </span>
                <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="p-4 pt-0 text-gray-700 dark:text-gray-300 border-t border-gray-200 dark:border-gray-700">
                {item.answer}
              </div>
            </details>
          ))}
        </div>
      </section>
    )}

    <!-- Share -->
    <div class="mt-12 p-6 bg-gray-50 dark:bg-gray-800 rounded-2xl text-center">
      <p class="text-gray-600 dark:text-gray-400 mb-4">이 글이 도움이 되셨나요?</p>
      <div class="flex justify-center gap-3">
        <button
          id="share-btn"
          class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
        >
          공유하기
        </button>
        <button
          id="copy-btn"
          class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
        >
          링크 복사
        </button>
      </div>
    </div>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="mt-12">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6">관련 글</h2>
        <div class="space-y-4">
          {relatedPosts.map((p) => {
            const pSlug = p.slug.replace(/^ko\//, '');
            return (
              <a
                href={`/ko/blog/${pSlug}`}
                class="flex items-center gap-4 p-4 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
              >
                <span class="text-2xl">{p.data.emoji}</span>
                <div>
                  <h3 class="font-medium text-gray-900 dark:text-white">{p.data.title}</h3>
                  <p class="text-sm text-gray-500">{calculateReadingTime(p.body)}분 읽기</p>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    )}

    <!-- Back Link -->
    <div class="mt-12 text-center">
      <a href="/ko/blog" class="text-primary-600 dark:text-primary-400 hover:underline">
        ← 블로그 목록으로
      </a>
    </div>
  </article>
</Layout>

<script is:inline>
  document.getElementById('share-btn')?.addEventListener('click', async () => {
    if (navigator.share) {
      try {
        await navigator.share({
          title: document.title,
          url: window.location.href
        });
      } catch (e) {
        // User cancelled share
      }
    } else {
      navigator.clipboard.writeText(window.location.href);
      alert('링크가 복사되었습니다!');
    }
  });

  document.getElementById('copy-btn')?.addEventListener('click', () => {
    navigator.clipboard.writeText(window.location.href);
    const btn = document.getElementById('copy-btn');
    const originalText = btn.textContent;
    btn.textContent = '복사됨!';
    setTimeout(() => {
      btn.textContent = originalText;
    }, 2000);
  });
</script>
