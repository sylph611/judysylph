---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import { getLangFromUrl, useTranslations, getAlternateLocaleUrl, type Lang } from '../i18n';
import NotificationBanner from '../components/NotificationBanner.astro';
import ScrollToTop from '../components/ScrollToTop.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
  jsonLd?: Record<string, unknown> | Record<string, unknown>[];
}

const { title, description, ogImage, canonicalUrl, jsonLd } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const alternateLang: Lang = lang === 'ko' ? 'en' : 'ko';
const alternateUrl = getAlternateLocaleUrl(Astro.url, alternateLang);

const siteUrl = Astro.site?.toString() || 'https://judysylph.com';
const fullOgImage = ogImage || `${siteUrl}/og/default.svg`;
const fullCanonicalUrl = canonicalUrl || Astro.url.href;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#7c3aed" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="JudySylph" />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.svg" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description || t('site.description')} />

    <!-- Canonical & Alternate -->
    <link rel="canonical" href={fullCanonicalUrl} />
    <link rel="alternate" hreflang={alternateLang} href={`${siteUrl}${alternateUrl}`} />
    <link rel="alternate" hreflang={lang} href={fullCanonicalUrl} />
    <link rel="alternate" hreflang="x-default" href={`${siteUrl}/ko`} />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title={lang === 'ko' ? 'JudySylph Î∏îÎ°úÍ∑∏ RSS' : 'JudySylph Blog RSS'} href={`${siteUrl}/rss.xml?lang=${lang}`} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="JudySylph" />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description || t('site.description')} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={lang === 'ko' ? 'ko_KR' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'ko' ? 'en_US' : 'ko_KR'} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullCanonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description || t('site.description')} />
    <meta property="twitter:image" content={fullOgImage} />

    <!-- Dark mode script (runs before page render to prevent flash) -->
    <script is:inline>
      function applyTheme() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      }
      applyTheme();
      // Re-apply theme after View Transitions swap
      document.addEventListener('astro:after-swap', applyTheme);
    </script>

    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BLLN6ZYR3W"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-BLLN6ZYR3W');
    </script>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "JudySylph",
      "url": siteUrl,
      "description": t('site.description'),
      "inLanguage": [lang === 'ko' ? 'ko-KR' : 'en-US'],
      "potentialAction": {
        "@type": "SearchAction",
        "target": `${siteUrl}/${lang}?q={search_term_string}`,
        "query-input": "required name=search_term_string"
      }
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "JudySylph",
      "url": siteUrl,
      "logo": `${siteUrl}/favicon.svg`,
      "sameAs": []
    })} />
    {jsonLd && (
      Array.isArray(jsonLd)
        ? jsonLd.map((schema) => (
            <script type="application/ld+json" set:html={JSON.stringify(schema)} />
          ))
        : <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}

    <!-- View Transitions -->
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Skip to main content link (accessibility) -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary-600 focus:text-white focus:rounded-lg focus:outline-none"
    >
      {lang === 'ko' ? 'Î≥∏Î¨∏ÏúºÎ°ú Í±¥ÎÑàÎõ∞Í∏∞' : 'Skip to main content'}
    </a>

    <!-- Header -->
    <header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-700" role="banner">
      <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between" role="navigation" aria-label={lang === 'ko' ? 'Î©îÏù∏ ÎÑ§ÎπÑÍ≤åÏù¥ÏÖò' : 'Main navigation'}>
        <a href={`/${lang}`} class="text-2xl font-bold text-primary-600 dark:text-primary-400">
          JudySylph
        </a>
        <div class="flex items-center gap-4">
          <a
            href={`/${lang}/blog`}
            class="text-sm text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 rounded-lg px-2 py-1"
          >
            {lang === 'ko' ? 'Î∏îÎ°úÍ∑∏' : 'Blog'}
          </a>
          <a
            href={`/${lang}/history`}
            class="text-sm text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 rounded-lg p-1"
            aria-label={lang === 'ko' ? 'ÎÇ¥ ÌÖåÏä§Ìä∏ Í∏∞Î°ù Î≥¥Í∏∞' : 'View my test history'}
          >
            <span aria-hidden="true">üìö</span>
            <span class="sr-only">{lang === 'ko' ? 'ÎÇ¥ Í∏∞Î°ù' : 'My History'}</span>
          </a>
          <a
            href={alternateUrl}
            class="text-sm text-gray-600 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 rounded-lg px-2 py-1"
            aria-label={lang === 'ko' ? 'Switch to English' : 'ÌïúÍµ≠Ïñ¥Î°ú Ï†ÑÌôò'}
            hreflang={alternateLang}
          >
            {t('nav.language')}
          </a>
          <button
            id="theme-toggle"
            type="button"
            class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
            aria-label="Toggle dark mode"
          >
            <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
            </svg>
            <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
              <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <!-- Ad Banner (Header) -->
    <div class="w-full bg-gray-50 dark:bg-gray-800 py-2">
      <div class="max-w-6xl mx-auto px-4">
        <div class="ad-banner ad-header h-[90px] flex items-center justify-center bg-gray-200 dark:bg-gray-700 rounded text-gray-400 text-sm">
          <!-- AdSense placeholder -->
          <span>Ad Space (728x90)</span>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <main id="main-content" class="flex-grow" role="main" tabindex="-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-100 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-12" role="contentinfo">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">
            JudySylph
          </div>
          <div class="flex gap-6 text-sm text-gray-600 dark:text-gray-400">
            <a href={`/${lang}/blog`} class="hover:text-primary-600 dark:hover:text-primary-400">{lang === 'ko' ? 'Î∏îÎ°úÍ∑∏' : 'Blog'}</a>
            <a href={`/${lang}/faq`} class="hover:text-primary-600 dark:hover:text-primary-400">FAQ</a>
            <a href={`/${lang}/privacy`} class="hover:text-primary-600 dark:hover:text-primary-400">{t('footer.privacy')}</a>
            <a href={`/${lang}/terms`} class="hover:text-primary-600 dark:hover:text-primary-400">{t('footer.terms')}</a>
            <a href={`/${lang}/contact`} class="hover:text-primary-600 dark:hover:text-primary-400">{t('footer.contact')}</a>
            <a href={`/rss.xml?lang=${lang}`} class="hover:text-primary-600 dark:hover:text-primary-400 flex items-center gap-1" aria-label="RSS Feed">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/></svg>
              RSS
            </a>
          </div>
        </div>
        <div class="mt-6 text-center text-sm text-gray-500 dark:text-gray-400">
          {t('footer.copyright')}
        </div>
      </div>
    </footer>

    <script is:inline>
      function setupThemeToggle() {
        const themeToggle = document.getElementById('theme-toggle');
        if (themeToggle && !themeToggle.dataset.initialized) {
          themeToggle.dataset.initialized = 'true';
          themeToggle.addEventListener('click', () => {
            const isDark = document.documentElement.classList.toggle('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
          });
        }
      }
      setupThemeToggle();
      // Re-setup after View Transitions
      document.addEventListener('astro:page-load', setupThemeToggle);
    </script>

    <!-- Service Worker Registration -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(reg => console.log('SW registered'))
            .catch(err => console.log('SW registration failed:', err));
        });
      }
    </script>

    <!-- Notification Banner -->
    <NotificationBanner lang={lang} />

    <!-- Scroll to Top Button -->
    <ScrollToTop />
  </body>
</html>
